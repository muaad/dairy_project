<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Please fill out the farmer's details:</h3>
  </div>
  <div class="panel-body well">
    <%= form_for(@farmer) do |f| %>
      <% if @farmer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@farmer.errors.count, "error") %> prohibited this farmer from being saved:</h2>

          <ul>
          <% @farmer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :phone_number %><br>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :location %><br>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <!-- <div class="field">
        <%= f.label :registration_number %><br>
        <%= f.text_field :registration_number, class: "form-control" %>
      </div> -->
      <br>
      <div class="actions pull-right">
        <%= f.submit 'Save Farmer Details', :class => 'btn-success btn-sm' %>
      </div>
    <% end %>
  </div>
</div>
