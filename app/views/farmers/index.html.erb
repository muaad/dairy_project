<!-- page start-->
<section class="panel">
<div class="row">
  <header class="panel-heading">
      Farmers
      <button class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#myModal">
      Add Farmer
    </button>
  </header>
</div>

<div class="panel-body">
    <div class="adv-table">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
            <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th class="hidden-phone">Registration Number</th>
                <th class="hidden-phone">Number of Litres Delivered</th>
                <th class="hidden-phone">Amount Paid</th>
                <th class="hidden-phone">Amount Owed</th>
                <th class="hidden-phone"></th>
            </tr>
            </thead>
            <tbody>
            <% if !@farmers.nil? %>
                <% @farmers.each do |farmer| %>
                    <tr class="gradeX">
                        <td>
                            <%= farmer.name %>
                        </td>
                        <td>
                            <%= farmer.phone_number %>
                        </td>
                        <td class="hidden-phone">
                            <%= farmer.registration_number %>
                        </td>
                        <td class="center hidden-phone">
                            <%= farmer.litres_delivered %>
                        </td>
                        <td class="center hidden-phone">
                            <%= farmer.total_payout %>
                        </td>
                        <td class="center hidden-phone">
                            <%= farmer.amount_owed %>
                        </td>
                        <td>
                            <%= link_to 'Edit', edit_farmer_path(farmer) %>
                        </td>
                    </tr>
                <% end %>
            <% end %>
            
            </tbody>
        </table>

    </div>
</div>
</section>
<!-- page end-->

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h4 class="modal-title" id="myModalLabel">Add Farmer</h4>
          </div>
          <div class="modal-body">
            <%= render 'farmers/form' %>
          </div>
