<div class="login-body">
    <div class="container" style="margin-right: -15%;">
      <div class="authform" style="margin-bottom: 5%; margin-right: -15%; margin-top: 3%;">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', class: "form-signin"}) do |f| %>
          <h2 class="form-signin-heading">Sign Up</h2>
          <%= devise_error_messages! %>
          <div class="login-wrap">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.file_field :profile_pic %>
            </div>
             <%= f.submit 'Sign up', :class => 'btn btn-lg btn-login btn-block' %>
           </div>
        <% end %>
      </div>
    </div>
</div>