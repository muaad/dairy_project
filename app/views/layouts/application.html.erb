  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Maziwa Pay" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Maziwa Pay" %>">    
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => false %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header class="header white-bg">
          <div class="sidebar-toggle-box">
              <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
          </div>
        <!--logo start-->
        <a href="/" class="logo">Maziwa<span>Pay</span></a>
        <!--logo end-->
        <div class="top-nav ">
            <!--search & user info start-->
            <ul class="nav pull-right top-menu">
                <!-- <li>
                    <input type="text" class="form-control search" placeholder="Search">
                </li> -->
                <!-- user login dropdown start-->
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                      <% if user_signed_in? %>
                        <% if current_user.profile_pic.exists? %>
                          <%= image_tag current_user.profile_pic.url(:thumb), style: "width: 20px;" %>
                        <% else %>
                          <%= image_tag "/assets/avatar.png", style: "width: 20px;" %>
                        <% end %>
                        <span class="username"><%= current_user.name %></span>
                        <b class="caret"></b>
                      <% else %>
                        Login
                        <b class="caret"></b>
                      <% end %>
                    </a>
                    <ul class="dropdown-menu extended logout">
                        <div class="log-arrow-up"></div>
                        <% if user_signed_in? %>
                        <li><a href="<%= user_path(current_user) %>"><i class=" fa fa-suitcase"></i>Profile</a></li>
                        <li><a href="<%= dashboard_index_path %>"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                        <li><a href="<%= dashboard_notifications_path %>"><i class="fa fa-bell-o"></i> Notification</a></li>
                        <li>
                          <a href="<%= destroy_user_session_path %>" data-method="delete"><i class="fa fa-key"></i> Log Out</a>
                        </li>
                        <% else %>
                          <li>
                            <%= render 'layouts/login' %>
                          </li>
                        <% end %>
                    </ul>
                </li>
                <!-- user login dropdown end -->
            </ul>
            <!--search & user info end-->
        </div>
    </header>
