<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Please fill out the user's details:</h3>
  </div>
  <div class="panel-body well">
    <%= form_for(@new_user, :url => add_user_path, :html => { method: :post, :role => 'form'}) do |f| %>
      <!-- <h2 class="form-signin-heading">New User</h2> -->
      <!-- <div class="login-wrap"> -->
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.check_box :is_admin %> Is User Admin
        </div>
         <%= f.submit 'Add User', :class => 'btn btn-sm btn-success pull-right' %>
       <!-- </div> -->
    <% end %>
  </div>
</div>