<!-- page start-->
<section class="panel">
<div class="row">
    <header class="panel-heading">
        <!-- Deliveries
        <button class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#myModal">
        Record A Delivery
      </button> -->
    </header>
</div>

<div class="panel-body">
      <div class="adv-table">
          <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info" class="display table table-bordered table-striped">
              <thead>
              <tr>
                  <th>Item</th>
                  <th>Delivered By</th>
                  <th class="hidden-phone">Quantity</th>
                  <th class="hidden-phone">Price Per Unit</th>
                  <th class="hidden-phone">Total Amount</th>
                  <th class="hidden-phone">Cleared?</th>
                  <th class="hidden-phone"></th>
              </tr>
              </thead>
              <tbody>
              <% if !@deliveries.nil? %>
                  <% @deliveries.each do |delivery| %>
                      <tr class="gradeX">
                          <td>
                              <%= delivery.item_name %>
                          </td>
                          <td>
                              <%= delivery.delivered_by %>
                          </td>
                          <td class="hidden-phone">
                              <%= delivery.quantity %>
                          </td>
                          <td class="center hidden-phone">
                              <%= delivery.price %>
                          </td>
                          <td class="center hidden-phone">
                              <%= delivery.total %>
                          </td>
                          <td class="center hidden-phone">
                              <%= delivery.paid_for %>
                          </td>
                          <td>
                              <%= link_to 'Edit', edit_delivery_path(delivery) %>
                          </td>
                      </tr>
                  <% end %>
              <% end %>
              
              </tbody>
          </table>

      </div>
</div>
</section>
<!-- page end-->

